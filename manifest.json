{
  "manifest_version": 3,
  "name": "AutoTone",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.spotify.com/*"
  ],
  "background": {
    "service_worker": "src/worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": "public/icon.png"
  }
}